{
    "compilerOptions": {
        "target": "ES2022",
        "moduleResolution": "Node",
        "lib": [
            "ESNext"
        ],
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "resolveJsonModule": true,
        "allowSyntheticDefaultImports": true,
        "allowJs": true,
        "outDir": "dist"
    },
    "include": [
        "main.ts",
        "v1",
        "lib/*.ts"
    ],
    "exclude": [
        "node_modules",
    ]
}
